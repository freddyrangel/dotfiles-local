set-option -g status on
set-option -g status-interval 2
set-option -g status-justify "left"
set-option -g status-left-length 30
set-option -g status-right-length 45
set-option -g status-left "#(~/repositories/dependencies/tmux-powerline/powerline.sh left)"
set-option -g status-right "#(~/repositories/dependencies/tmux-powerline/powerline.sh right)"
set-hook -g session-created 'run-shell "~/repositories/dependencies/tmux-powerline/powerline.sh init"' # prettifies the window-status segments
bind C-[ run '~/repositories/dependencies/tmux-powerline/mute_powerline.sh left' # Mute left statusbar.
bind C-] run '~/repositories/dependencies/tmux-powerline/mute_powerline.sh right'  # Mute right statusbar.
